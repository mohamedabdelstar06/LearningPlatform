@page
@using LearningPlatform.BLL.Utilities
@model RegisterModel
@{
	ViewData["Title"] = "Register";
	Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}


	<!-- **************** MAIN CONTENT START **************** -->
	<main>
		<section class="p-0 d-flex align-items-center position-relative overflow-hidden">

			<div class="container-fluid">
				<div class="row">
					<!-- left -->
					<div class="col-12 col-lg-6 d-md-flex align-items-center justify-content-center bg-primary bg-opacity-10 vh-lg-100">
						<div class="p-3 p-lg-5">
							<!-- Title -->
							<div class="text-center">
								<h2 class="fw-bold">Welcome to our largest community</h2>
								<p class="mb-0 h6 fw-light">Let's learn something new today!</p>
							</div>
							<!-- SVG Image -->
							<img src="~/assets/images/element/02.svg" class="mt-5" alt="">
							<!-- Info -->
							<div class="d-sm-flex mt-5 align-items-center justify-content-center">
								<ul class="avatar-group mb-2 mb-sm-0">
									<li class="avatar avatar-sm"><img class="avatar-img rounded-circle" src="~/assets/images/avatar/01.jpg" alt="avatar"></li>
									<li class="avatar avatar-sm"><img class="avatar-img rounded-circle" src="~/assets/images/avatar/02.jpg" alt="avatar"></li>
									<li class="avatar avatar-sm"><img class="avatar-img rounded-circle" src="~/assets/images/avatar/03.jpg" alt="avatar"></li>
									<li class="avatar avatar-sm"><img class="avatar-img rounded-circle" src="~/assets/images/avatar/04.jpg" alt="avatar"></li>
								</ul>
								<!-- Content -->
								<p class="mb-0 h6 fw-light ms-0 ms-sm-3">4k+ Students joined us, now it's your turn.</p>
							</div>
						</div>
					</div>

					<!-- Right -->
					<div class="col-12 col-lg-6 m-auto">
						<div class="row my-5">
							<div class="col-sm-10 col-xl-8 m-auto">
								<!-- Title -->
								<img src="~/assets/images/element/03.svg" class="h-40px mb-2" alt="">
								<h2>Sign up for your account!</h2>
								<p class="lead mb-4">Nice to see you! Please Sign up with your account.</p>

								<!-- Form START -->
								<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
								<div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
									<div class="mb-4">
										<label asp-for="Input.Name" class="form-label">Full name *</label>
										<div class="input-group input-group-lg">
											<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-envelope-fill"></i></span>
											<input asp-for="Input.Name" autocomplete="username" aria-required="true" class="form-control border-0 bg-light rounded-end ps-1" placeholder="Name" id="exampleInputEmail1">
											
										</div>
									<span asp-validation-for="Input.Name" class="text-danger"></span>
									</div>
									<!-- Email -->
									<div class="mb-4">
										<label asp-for="Input.Email" class="form-label">Email address *</label>
										<div class="input-group input-group-lg">
											<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="bi bi-envelope-fill"></i></span>
											<input asp-for="Input.Email" autocomplete="username" aria-required="true" class="form-control border-0 bg-light rounded-end ps-1" placeholder="E-mail" id="exampleInputEmail1">
										
										</div>
									<span asp-validation-for="Input.Email" class="text-danger"></span>
									</div>
									<!-- Password -->
									<div class="mb-4">
										<label asp-for="Input.Password" class="form-label">Password *</label>
										<div class="input-group input-group-lg">
											<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
											<input asp-for="Input.Password" autocomplete="username" aria-required="true" class="form-control border-0 bg-light rounded-end ps-1" placeholder="*********" id="inputPassword5">
										
										</div>
									<span asp-validation-for="Input.Password" class="text-danger"></span>
									</div>
									<!-- Confirm Password -->
									<div class="mb-4">
										<label asp-for="Input.ConfirmPassword" class="form-label">Confirm Password *</label>
										<div class="input-group input-group-lg">
											<span class="input-group-text bg-light rounded-start border-0 text-secondary px-3"><i class="fas fa-lock"></i></span>
											<input asp-for="Input.ConfirmPassword" autocomplete="username" aria-required="true" class="form-control border-0 bg-light rounded-end ps-1" placeholder="*********" id="inputPassword6">
										
										</div>
									<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
									</div>
									<!-- Check box -->
									
								@if (User.IsInRole(SD.AdminRole))
								{
									<div class="mb-4">
										<input type="radio" value="@SD.AdminRole" class="form-check-input" name="RoleRadio" > @SD.AdminRole
										<input type="radio" value="@SD.UserRole" class="form-check-input" name="RoleRadio" > @SD.UserRole
										<input type="radio" value="@SD.InstructorRole" class="form-check-input" name="RoleRadio" > @SD.InstructorRole
									</div>
								}

								@if (User.IsInRole(SD.AdminRole))
								{
									<div class="align-items-center mt-0">
										<div class="d-grid">
											<button id="registerSubmit" type="submit" class="btn btn-primary mb-0">Create new user</button>
										</div>
									</div>
								}else{
									<div class="align-items-center mt-0">
										<div class="d-grid">
											<button id="registerSubmit" type="submit" class="btn btn-primary mb-0">Sign Up</button>
										</div>
									</div>
								}

								</form>
								<!-- Form END -->
								<!-- Sign up link -->
								<div class="mt-4 text-center">
								<span>Already have an account?<a href="~/Identity/Account/Login"> Sign in here</a></span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</section>
	</main>
	<!-- **************** MAIN CONTENT END **************** -->
	<!-- Back to top -->
	<div class="back-top"><i class="bi bi-arrow-up-short position-absolute top-50 start-50 translate-middle"></i></div>

	<!-- Bootstrap JS -->
	<script src="assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

	<!-- Template Functions -->
	<script src="assets/js/functions.js"></script>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
