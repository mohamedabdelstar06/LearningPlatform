@model Course
@{
	ViewData["Title"] = "Details";
}

<section class="pt-3 pt-xl-5">
	<div class="container" data-sticky-container="">
		<div class="row g-4">
			<!-- Main content START -->

			<div class="col-xl-8">
				<div class="row g-4">
					<!-- Title START -->
					<div class="col-12">
						<!-- Title -->
						<h2>@Model.CourseName</h2>
						<p>@Model.CourseDescription</p>

					</div>
					<!-- Title END -->
					<!-- Image and video -->
					<div class="col-12 position-relative">
						<img width="100%" height="450px" src="~/@Model.Image" />
					</div>

				</div>
			</div>
			<!-- Main content END -->
			<!-- Right sidebar START -->
			<div class="col-xl-4">
				<div data-sticky="" data-margin-top="80" data-sticky-for="768">
					<div class="row g-4">
						<div class="col-md-6 col-xl-12">
							<!-- Course info START -->
							<div class="card card-body border p-4">
								<!-- Price and share button -->
								<div class="d-flex justify-content-between align-items-center">
									<!-- Price -->
									<h3 class="fw-bold mb-0 me-2">$@Model.Price</h3>
									
								</div>

								<!-- Buttons -->
								<div class="mt-3 d-grid">
									<a asp-action="AddToCart" asp-controller="Order" asp-route-id="@Model.Id" class="btn btn-outline-primary">Add to cart</a>
								</div>
								<!-- Divider -->
								<hr>

								<!-- Title -->
								<h5 class="mb-3">This course includes</h5>
								<ul class="list-group list-group-borderless border-0">
									<li class="list-group-item px-0 d-flex justify-content-between">
										<span class="h6 fw-light mb-0"><i class="fas fa-fw fa-book-open text-primary"></i>Lectures</span>
										<span>@Model.TotalLecture</span>
									</li>
									<li class="list-group-item px-0 d-flex justify-content-between">
										<span class="h6 fw-light mb-0"><i class="fas fa-fw fa-clock text-primary"></i>Duration</span>
										<span>@Model.CourseTime h</span>
									</li>
									<li class="list-group-item px-0 d-flex justify-content-between">
										<span class="h6 fw-light mb-0"><i class="fas fa-fw fa-signal text-primary"></i>Skills</span>
										<span>@Model.Level</span>
									</li>
								</ul>
								<!-- Divider -->
								<hr>



							</div>
							<!-- Course info END -->
						</div>


					</div><!-- Row End -->
				</div>
			</div>
			<!-- Right sidebar END -->

		</div><!-- Row END -->
	</div>
</section>
