@model List<Category>
@{
	ViewData["Title"] = "All Category";
	Layout = "~/Views/Shared/_Dashboard.cshtml";
}

<div class="row">
	<div class="col-12">
		<div class="card border rounded-3 mt-5">
			<!-- Card header START -->
			<div class="card-header border-bottom">
				<div class="d-sm-flex justify-content-sm-between align-items-center">
					<h3 class="mb-2 mb-sm-0">All Category</h3>
					<a asp-action="Create" asp-controller="Category" class="btn btn-sm btn-primary-soft mb-0">Create Category</a>
				</div>
			</div>
			<!-- Card header END -->
			<!-- Card body START -->
			<div class="card-body">
				<div class="table-responsive-lg border-0 rounded-3">
					<!-- Table START -->
					<table class="table table-dark-gray align-middle p-4 mb-0 table-hover">
						<!-- Table head -->
						<thead>
							<tr>
								<th scope="col" class="border-0 rounded-start">Category Name</th>
								<th scope="col" class="border-0"></th>
								<th scope="col" class="border-0">Time Create</th>
								<th scope="col" class="border-0"></th>
								<th scope="col" class="border-0 rounded-end">Action</th>
							</tr>
						</thead>
						<!-- Table body START -->
						<tbody>
							@foreach(var item in Model)
							{
								<tr>
									<!-- Course item -->
									<td>
										<div class="d-flex align-items-center">
											<!-- Image -->
											
											<!-- Title -->
											<h6 class="mb-0 ms-2">
												@item.CategoryName
											</h6>
										</div>
									</td>
									<!-- Selling item -->
									<td></td>
									<!-- Amount item -->
									<td>@item.CreateTime</td>
									<!-- Period item -->
									<td>
										<span class="badge bg-primary bg-opacity-10 text-primary"></span>
									</td>
									<!-- Action item -->
									<td>
										<a asp-action ="Edit" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-sm btn-success-soft btn-round me-1 mb-0">
											<i class="far fa-fw fa-edit"></i></a>
										<a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-sm btn-danger-soft btn-round mb-0">
											<i class="fas fa-fw fa-times"></i>
										</a>
									</td>
								</tr>
							}
							<!-- Table item -->
							


						</tbody>
						<!-- Table body END -->
					</table>
					<!-- Table END -->
				</div>


			</div>
			<!-- Card body START -->
		</div>
	</div>
</div>